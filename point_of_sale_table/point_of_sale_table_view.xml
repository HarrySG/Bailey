<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_product_popup_inherit">
            <field name="name">product.template.popup.form.inherit</field>
            <field name="model">product.template</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="/form[@string='Product']/sheet/div[@class='oe_left']/div[@name='options']/div/label[@for='sale_ok']" position='after'> 
                    <field name='is_product_description'/>
                    <label for="is_product_description"/>
                    <field name='is_product_wait'/>
                    <label for="is_product_wait"/>
                </xpath>
            </field>
        </record>

        <record id="view_pos_order_filter" model="ir.ui.view">
            <field name="name">pos.order.list.select</field>
            <field name="model">pos.order</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order">
                    <field name="name" string="Sales Order"/>
                    <field name="date_order"/>
                    <field name="pos_reference"/>
                    <filter icon="terp-go-today" name="filter_today" string="Today_New" domain="[('order_line_status','=','draft'),('state','in',('draft','paid')),('create_date','&lt;=',time.strftime('%%Y-%%m-%%d 23:59:59')),('create_date','&gt;=',time.strftime('%%Y-%%m-%%d 00:00:00'))]" />
                    <filter icon="gtk-apply" string="Done" domain="[('state','in',('paid','invoiced','done'))]"/>
                    <filter icon="terp-check" string="Invoiced" domain="[('state','=','invoiced')]"/>
                    <filter icon="gtk-convert" string="Posted" domain="[('state','=','done')]"/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Salesperson" icon="terp-personal" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Order Month" icon="terp-go-month" domain="[]" context="{'group_by':'date_order'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_search_view">
            <field name="name">pos.order.line.search</field>
            <field name="model">pos.order.line</field>
            <field name="arch" type="xml">
                <search string="Search POS Order Line">
                    <field name="categ_id" filter_domain="[('categ_id','child_of',self)]" string="Category"/>
                    <field name="order_id" string="Orders"/>
                    <group expand="0" string="Group By...">
                        <filter icon="terp-stock_symbol-selection" string="Order" context="{'group_by':'order_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_pos_pos_kanban">
            <field name="name">Orders Screen</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="view_pos_order_filter"/>
            <field name="context">{'search_default_filter_today': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new order.
                </p>
                <p>
                    Use this menu to browse previous orders. To record new
                    orders, you may use the menu <i>Your Session</i> for
                    the touchscreen interface.
                </p>
           </field>
       </record>

        <record id='action_pos_order_line_view_extended' model='ir.actions.act_window'>
            <field name='name'>Kitchen Screen</field>
            <field name='res_model'>pos.order.line</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>kanban,tree,form</field>
            <field name='auto_refresh'>5000</field>
            <field name='search_view_id' ref="sale_order_line_search_view"/>
            <field name="context">{'search_default_open_true':True,'search_default_order_id':[active_id]}</field>
            <field name="domain">[('order_id.state', '=', 'draft'), ('order_line_state_id','!=',4)]</field>
        </record>

        <record model="ir.ui.view" id="view_pos_order_tree_inherit">
            <field name="name">pos.order.inherit</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree" />
            <field name="arch" type="xml">
                <field name="pos_reference" position="after">
                    <field name="table_name"/>
                </field>
                <field name="session_id" position="after">
                     <button name="%(point_of_sale.action_pos_payment)d" string="Payment" icon="gtk-apply" class="oe_highlight" type="action" states="draft" context="{'pos_session_id' : session_id}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="view_pos_pos_extended_form">
            <field name="name">pos.order.extended</field>
            <field name="model">pos.order</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="pflag"/>
                    <field name="parcel" attrs="{'invisible': [('pflag','=', False)]}"/>
                    <field name="phone"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Extra Info']/group/field[@name='pos_reference']" position="before">
                    <field name='driver_name' />
                </xpath>
                <xpath expr="//notebook/page[@string='Products']" position="after">
                    <page string="Tables">
                        <field name="reserved_table_ids">
                            <tree editable="bottum">
                                <field name="table_id"/>
                                <field name="order_id"/>
                                <field name="reserver_seat"/>
                            </tree> 
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='lines']/tree/field[@name='product_id']" position="after">
                    <field name="property_description"/>
                </xpath>
                <xpath expr="//field[@name='lines']/form/group[1]/field[@name='notice']" position="before">
                    <field name="product_ids" colspan="4" nolable="1"/>
                </xpath>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_pos_order_kanban">
          <field name="name">pos.order.kanban</field>
          <field name="model">pos.order</field>
          <field name="arch" type="xml">
          <kanban class="oe_notes oe_kanban_quickcreate_textarea" >
              <field name='name' />
              <field name='parcel'/>
              <field name="reserved_table_ids"/>
              <field name="table_name"/>
              <field name="partner_id" />
              <field name="use_order"/>
              <field name="lines"/>
              <field name="color"/>
              <field name="product_details"/>
              <filed name="order_line_status"/>
              <templates>
                  <t t-name="kanban-box">
                      <t t-if="record.product_details.raw_value.length != 0">
                          <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_global_click_edit oe_semantic_html_override oe_kanban_card oe_kanban_card_fancy " t-att-id="record.id.raw_value" style="border:ridge;border-color:white;width:315px;" >
                              <div class="oe_dropdown_kanban">
                                  <span class="oe_dropdown_toggle">
                                      <span class="oe_e">Ã­</span>
                                      <ul class="oe_dropdown_menu">
                                          <li>
                                              <ul class="oe_kanban_colorpicker" data-field="color" />
                                          </li>
                                      </ul>
                                  </span>
                                  <div style="display: inline"></div>
                              </div>
                              <div>
                                  <div>
                                      <a t-if="record.use_order.raw_value"  name="%(action_pos_order_line_view_extended)d" type="action"> 
                                          <h4 class="text-center" style="color:blue;"><strong><field name="name"/></strong></h4>
                                          <t t-if="record.reserved_table_ids.raw_value != 0">
                                              <div style="background:antiquewhite;border-color:darkgoldenrod;border: solid;border-width: thin;text-align: center;">
                                                  <b>Table Name :- </b><field name="table_name"/>
                                              </div> <br/>
                                          </t>
                                          <t t-if="record.parcel.value">
                                              <div  style="background:antiquewhite;border-color:darkgoldenrod;border: solid;border-width: thin;text-align: center;">
                                                  <b>Parcel :- </b><field name="parcel" />
                                              </div><br/>
                                          </t>
                                      </a>
                                      <a t-if="record.use_order.raw_value"  name="%(action_pos_order_line_view_extended)d" type="action"> 
                                          <t t-if="record.partner_id.raw_value">
                                              <div style="background:antiquewhite;border-color:darkgoldenrod;border: solid;border-width: thin;text-align: center;">
                                                  <b>Customer:- </b><field name="partner_id" />
                                              </div><br/>
                                         </t>
                                      </a>
                                      <div> <b>Created Time : </b> <field name="create_date"/></div>
                                      <t t-foreach="record.product_details.raw_value" t-as="line">
                                          <t t-if="line.split('____')[1].split('-')[2] == '3'"> 
                                              <div style="background:yellowgreen;">
                                                  <a t-if="record.use_order.raw_value"  name="%(action_pos_order_line_view_extended)d" type="action"> 
                                                      <t t-esc="line.split('____')[0]"/>
                                                      <t t-esc="line.split('____')[1].split('-')[0]"/>
                                                  </a>
                                                  <div style="float:right;background:background:antiquewhite;border-color:antiquewhite;height:25px;">Done</div>
                                                  <t t-if="line.split('____')[1].split('-')[3] != 'False'"> 
                                                     <br/><span><t t-esc="line.split('____')[1].split('-')[3]"/></span>
                                                 </t><br/><br/>
                                             </div>
                                         </t>
                                         <t t-if="line.split('____')[1].split('-')[2] != '3'">
                                             <div>
                                                 <a t-if="record.use_order.raw_value"  name="%(action_pos_order_line_view_extended)d" type="action"> 
                                                     <t t-esc="line.split('____')[0]"/>
                                                     <t t-esc="line.split('____')[1].split('-')[0]"/>
                                                 </a>
                                                 <button t-att-data="record.id.raw_value" name="%(action_pos_pos_kanban)d" type="action" t-att-id="line.split('____')[1].split('-')[1]" onclick="order_line_done(this)" style="float:right;background:white;width:90px;color:cadetblue;border-color:antiquewhite;height:25px;" >Done/Clear</button>
                                                 <t t-if="line.split('____')[1].split('-')[3] != 'False'"> 
                                                     <br/><span><t t-esc="line.split('____')[1].split('-')[3]"/></span>
                                                 </t>
                                                 <br/><br/>
                                             </div>
                                         </t>
                                      </t>
                                  </div>
                              </div>
                              <t t-if="record.product_details.raw_value.length gt 3">
                                  <button onmouseover="change_button_color(this)" onmouseleave="button_color_change(this)" t-att-data="record.id.raw_value" t-att-id="record.id.raw_value" style="background:white;width:298PX;color:cadetblue;border-color:antiquewhite;height:30px;"  name="show_all_product" type="object">
                                      Show More / Less...
                                  </button>
                              </t>
                              <t t-if="record.product_details.raw_value.length != 0">
                                  <button  onclick="clear_all_product_line(this)" t-att-data="'clear_'+record.id.raw_value" t-att-id="record.id.raw_value" name="%(action_pos_pos_kanban)d" type="action" style="background:white;width:298PX;color:cadetblue;border-color:antiquewhite;height:30px;">
                                      Clear All...
                                  </button>
                              </t>
                          </div>
                          <script>
                              function clear_all_product_line(str1){
                                  var self = this;
                                  self.pos_order_dataset = new self.openerp.web.DataSetSearch(self, 'pos.order', {}, [] );
                                  self.pos_orderline_dataset = new self.openerp.web.DataSetSearch(self, 'pos.order.line', {}, [] );
                                  self.pos_order_dataset.read_slice(['id', 'lines'], {'domain': [['id', '=', parseInt($(str1).attr('id'))]]}).done(function(records){
                                      _.each(records[0].lines,function(line){
                                          self.pos_orderline_dataset.write( parseInt(line), {"order_line_state_id":3})
                                      })
                                      self.pos_order_dataset.write(parseInt($(str1).attr('id')), {'order_line_status':'done'})
                                  });
                              }
                              function order_line_done(str1){
                                  var self = this
                                  self.pos_orderline_dataset = new self.openerp.web.DataSetSearch(self, 'pos.order.line', {}, [] );
                                  self.pos_orderline_dataset.write( parseInt($(str1).attr('id')), {"order_line_state_id":3})
                                  self.pos_order_dataset = new self.openerp.web.DataSetSearch(self, 'pos.order', {}, [] );
                                  self.pos_orderline_dataset.read_slice(['id', "order_line_state_id"], {'domain': [['order_line_state_id', '!=',3 ],['order_id', '=', parseInt($(str1).attr('data'))]]}).then(function(records){
                                      orderline_status = ""
                                      record_length = records.length
                                      _.each(records,function(record){
                                          if(record_length != 1){
                                              if(record.order_line_state_id[0] != 3 ){
                                                  orderline_status = 'draft'
                                              }
                                          }
                                      })
                                      if(orderline_status != 'draft'){
                                          self.pos_order_dataset.write(parseInt($(str1).attr('data')), {"order_line_status":'done'})
                                      }
                                  });
                              }
                              function change_button_color(str){
                                  $("#"+str.id).css("background","antiquewhite");
                              }
                              function button_color_change(str){
                                  $("button[data="+str.id+"]").css("background","white");
                                  $("#"+str.id).css("background","white");
                              }
                          </script>
                      </t>
                  </t>
              </templates>
          </kanban>
          </field>
      </record>


