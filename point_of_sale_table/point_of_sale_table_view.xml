                    <sheet name="Waiting Queue">
                        <group col="4" colspan="2">
                            <field name="sequence" />
                            <field name="partner_id" />
                        </group>
                        <group col="4" colspan="2">
                            <field name="no_of_person" required="1"/>
                            <field name="Resrvation_date"/>
                        </group>
                        <group col="4" colspan="2">
                            <field name="state" readonly="1"/>
                        </group>
