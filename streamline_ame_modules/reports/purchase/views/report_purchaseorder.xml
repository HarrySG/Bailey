<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_purchase_order">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="oe_structure"/>
	                    <div class="row">
	                        <div class="col-xs-6">
							<div class="row">
								<div class="col-xs-10">
									<strong>VENDOR: </strong><span t-if="o.partner_id.name" t-field="o.partner_id.name"/>
									<p t-if="o.partner_id.street" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.street"/></p>
									<p t-if="o.partner_id.street2" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span  t-field="o.partner_id.street2"/></p>
									<p t-if="o.partner_id.city" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.city"/></p>
									<p t-if="o.partner_id.state_id" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.state_id.name"/>
									 <span t-if="o.partner_id.zip">[</span>
									 <span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/>
									 <span t-if="o.partner_id.zip">]</span>
									</p>
									<p t-if="o.partner_id.phone" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span  t-field="o.partner_id.phone"/></p>
									<p t-if="o.partner_id.mobile" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.mobile"/></p>
									<p t-if="o.partner_id.mobile" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.fax"/></p>
									<p t-if="o.partner_id.email" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.email"/></p>
									<p t-if="o.partner_id.country_id.name" style="height:8px;" ><span style="color:white;">. . . . . . . . .</span><span t-field="o.partner_id.country_id.name"/></p>
									<p t-if="o.partner_id.name" style="height:10px;"><strong>Attn: </strong> <span t-esc="get_contacts(o.partner_id)"/></p>
								</div>
							</div>
	                    </div>
	                            
	                        
				        <div class="col-xs-5 col-xs-offset-1">
				        	<strong>Delivery Address: <span style="color:white;">..</span></strong>
				        	<span t-if="o.company_id.name" t-field="o.company_id.name"/>
				        	<p t-if="o.company_id.street" style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.street"/></p>
				        	<p t-if="o.company_id.street2" style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.street2"/></p>
				        	<p t-if="o.company_id.city" style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.city"/></p>
				        	<p style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.name"/> [<span t-field="o.company_id.zip"/>]
							</p>
				        	<p t-if="o.company_id.phone" style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.phone"/></p>
				        	<p t-if="o.company_id.fax" style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.fax"/></p>
				        	<p t-if="o.company_id.email" style="height:8px;" ><span style="color:white;">...................................</span><span t-field="o.company_id.email"/></p>
	
				        </div>
				    </div>

                    <h2 t-if="o.state != 'draft'">Purchase Order Confirmation N°<span t-field="o.name"/></h2>
                    <h2 t-if="o.state == 'draft'">Request for Quotation N°<span t-field="o.name"/></h2>

					<div class="row">
						<div class="col-xs-6">
							<strong>Ref. No.: </strong><span t-if="o.name" t-field="o.name"/>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<strong>Date: </strong><span t-if="o.date_order" t-field="o.date_order"/>
						</div>
					</div>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                            	<th><strong>ITEM NO.</strong></th>
                                <th><strong>ITEM DESCRIPTION</strong></th>
                                <!--th><strong>Taxes</strong></th-->
                                <!--th class="text-center"><strong>Date Req.</strong></th-->
                                <th class="text-right"><strong>QTY</strong></th>
                                <th class="text-right"><strong>Unit Price (<span t-if="o.company_id.currency_id.name" t-field="o.company_id.currency_id.name"/>)</strong></th>
                                <th class="text-right"><strong>TOTAL(<span t-if="o.company_id.currency_id.name" t-field="o.company_id.currency_id.name"/>)</strong></th>
                                <th><strong>REMARKS</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.order_line" t-as="line">
                                <td>
                                	<span t-esc="line_index + 1"/>
                            	</td>

                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <!--td>
                                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                                </td-->
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="product.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                                <td class="text-right">
                                    <span/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td><strong>Total Without Taxes</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-field="o.amount_tax"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                                <tr class="border-black">
                                    <td><strong>Grand Total</strong></td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"
                                            t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
 					<div class="row">
						<div class="col-xs-6">
							<strong>Authorized Signature: ___________________________</strong>
						</div>
					</div>
 					<div class="row">
						<div class="col-xs-6">
							<strong>Date of Approval: </strong><span t-if="o.date_approve" t-field="o.date_approve"/>
						</div>
					</div>
               
                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </t>
</template>

</data>
</openerp>
