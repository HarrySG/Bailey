<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="purchase.report_purchasequotation_document">
            <t t-call="streamline_ame_modules.streamline_ame_custom_report_header" />
            <div class="page">
                <div class="oe_structure"/>
                <div class="row text-center">
                    <br/>
                    <span style="font-size: 16px"><b><u>Request for Quotation</u></b></span>
                </div>
                <div class="row">
                    <br />
                    <div class="col-xs-5">
                        <div class="col-xs-4">
                            <span>To:</span>
                        </div>
                        <div class="col-xs-8">
                            <strong>
                                <span t-field="o.partner_id.name"/>
                            </strong>
                        </div>
                    </div>
                    <div class="col-xs-2">
                    </div>
                    <div class="col-xs-5">
                        <div class="col-xs-4" style="text-align:right">
                            <span>P.O no: </span>
                        </div>
                        <div class="col-xs-8">
                            <span t-field="o.name"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5">
                        <div class="col-xs-4">
                            <span>Add:</span>
                        </div>
                        <div class="col-xs-8">
                            <span t-field="o.partner_id.street" />
                            <span t-field="o.partner_id.street2" />
                            <span t-field="o.partner_id.city" />
                            <span t-field="o.partner_id.country_id.name" />
                            <span t-field="o.partner_id.zip" />
                        </div>
                    </div>
                    <div class="col-xs-2">
                    </div>
                    <div class="col-xs-5">
                        <div class="col-xs-4" style="text-align:right">
                            <div style="text-align:right">
                                <span>Date:</span>
                            </div>
                            <div style="text-align:right">
                                <span>Your Ref:</span>
                            </div>
                        </div>
                        <div class="col-xs-8">
                            <span t-field="o.date_order" t-field-options='{"format": "dd/MM/y"}' />
                            <span t-field="o.partner_ref" />
                        </div>
                    </div>
                </div>
                <br/>
                <br/>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                <strong>Description</strong>
                            </th>
                            <th class="text-center">
                                <strong>Expected Date</strong>
                            </th>
                            <th class="text-right">
                                <strong>Qty</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line" t-as="order_line">
                            <td style="width: 65%">
                                <span t-field="order_line.name"/>
                            </td>
                            <td class="text-center" style="width: 20%">
                                <span t-field="order_line.date_planned"/>
                            </td>
                            <td class="text-right">
                                <span t-field="order_line.product_qty" style="width: 15%"/>
                                <span t-field="order_line.product_uom" groups="product.group_uom"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <p t-field="o.notes"/>
            </div>
        </template>

    </data>
</openerp>
    
