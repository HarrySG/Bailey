<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<template id="report_streamline_ame_item_consumption_by_site">
	    <t t-call="report.html_container">
	        <t t-call="report.internal_layout">
	            <div class="page">
	                <h2>Item Consumption By Site</h2>
	
	                <div class="row mt32">
	                    <div class="col-xs-3">
	                        <strong>Company</strong>:<br/>
	                        <span t-esc="res_company.name"/>
	                    </div>
	                    <div class="col-xs-3">
	                        <strong>Print Date</strong>:<br/>
	                        <span t-esc="time.strftime('%d-%m-%Y', time.gmtime())"/>
	                    </div>
	                </div>
	                
	                <table class="table table-condensed" style="page-break-inside:auto;">
	                    <thead>
	                    	<tr>
		                        <th style="border-top: none !important"><strong>Product Code</strong></th>
		                        <th style="border-top: none !important"><strong>Product Description</strong></th>
		                        <th style="border-top: none !important"><strong>Delivered From</strong></th>
		                        <th style="border-top: none !important"><strong>Delivered To</strong></th>
		                        <th style="border-top: none !important"><strong>Delivered Date</strong></th>
		                        <th style="border-top: none !important"><strong>Delivered Qty to Site</strong></th>
		                        <th style="border-top: none !important"><strong>>Returned Date</strong></th>
		                        <th style="border-top: none !important"><strong>Returned Qty to HQ</strong></th>
	                        </tr>
	                    </thead>
	                    <tbody>
	                        <tr t-foreach="get_item_consumption_by_site()" t-as="line_ids" style="page-break-inside:avoid; page-break-after:auto;">
	                            <td>
	                                <span t-esc="line_ids['product_name']"/>
	                            </td>
	                            <td>
	                                <span t-esc="line_ids['complete_name']"/>
	                            </td>
	                            <td>
	                                <span t-esc="line_ids['co_name']"/>
	                            </td>
	                            <td class="text-center">
	                                <span t-esc="line_ids['1-30']"/>
	                            </td>
	                            <td class="text-center">
	                                <span t-esc="line_ids['31-60']"/>
	                            </td>
	                            <td class="text-center">
	                                <span t-esc="line_ids['61-90']"/>
	                            </td>
	                            <td class="text-center">
	                                <span t-esc="line_ids['>90']"/>
	                            </td>
	                            <td class="text-center">
	                                <span t-esc="line_ids['total']"/>
	                            </td>
	                        </tr>
	                    </tbody>
	                </table>
	            </div>
	        </t>
	    </t>
	</template>

</data>
</openerp>
