<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="product.streamline_ame_product_product_ext_form_view2">
            <field name="name">streamline.ame.product.extended.product.form.view</field>
            <field name="model">product.template</field>
            <field name="priority">30</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <field name="default_code" position="attributes">
                	<attribute name="string">Product code</attribute>
                	<!-- <attribute name="required">1</attribute>  -->
                </field>
                <xpath expr="//field[@name='description']" position="before">
                	<group>
                		<group>
                			<field name="living_material_price" />
							<field name="living_labour_price" />                					
                		</group>
                		<group>
                			<field name="living_material_by_ame" />
                			<field name="living_labour_by_ame" />
                		</group>
                		<group>
                			<field name="machinery_material_price" />
                			<field name="machinery_labour_price" />
                		</group>
                		<group>
                			<field name="machinery_material_by_ame" />
                			<field name="machinery_labour_by_ame" />
                		</group>
                	</group>
                </xpath>
            </field>
        </record>
       
    </data>
</openerp>
